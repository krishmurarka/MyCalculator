<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/DisplayNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Grey"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0.5pt">

            <Button
                android:id="@+id/button23"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"

                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:includeFontPadding="true"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/PlusMinus"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button25"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/ORANGE"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0.5pt">

            <Button
                android:id="@+id/Num7"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num8"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num9"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button27"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/ORANGE"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0.5pt">

            <Button
                android:id="@+id/Num4"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num5"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num6"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button34"
                android:layout_width="33pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/ORANGE"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0.5pt">

            <Button
                android:id="@+id/Num1"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num2"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Num3"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="@color/whiteblack"
                android:onClick="NumberClickEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button38"
                android:layout_width="33pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/ORANGE"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Num0"
            android:layout_width="66.5pt"
            android:layout_height="30pt"
            android:layout_marginRight="0.5pt"
            android:layout_weight="1"
            android:background="@color/whiteblack"
            android:onClick="NumberClickEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/NumDecimal"
            android:layout_width="33pt"
            android:layout_height="30pt"
            android:layout_marginRight="0.5pt"
            android:layout_weight="0.5"
            android:background="@color/whiteblack"
            android:onClick="NumberClickEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/button41"
            android:layout_width="33pt"
            android:layout_height="30pt"
            android:layout_weight="0.5"
            android:background="@color/ORANGE"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>